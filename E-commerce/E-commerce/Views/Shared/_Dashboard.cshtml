<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/dashboard.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                   
                </ul>
                <div class="dropdown">
                    <button class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="path/to/your/user-image.jpg" alt="User" class="rounded-circle" style="width: 40px; height: 40px;">
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Profile","Admin")">Profile</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout","Admin")">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column  p-3">
            <h3 class="text-center text-white mb-4">Dashboard</h3>
            <ul class="nav flex-column  justify-content-evenly ">
                <li class="nav-item  ">
                    <!-- Adjusted margin-bottom for uniform spacing -->
                    <a class="nav-link " href="@Url.Action("Index","Admin")">Home</a>
                </li>
                <li class="nav-item ">
                    <!-- Adjusted margin-bottom for uniform spacing -->
                    <a class="nav-link" href="@Url.Action("Profile","Admin")">Profile</a>
                </li>
                <li class="nav-item ">
                    <!-- Adjusted margin-bottom for uniform spacing -->
                    <a class="nav-link" href="#">Tasks</a>
                </li>
                <li class="nav-item ">
                    <!-- Adjusted margin-bottom for uniform spacing -->
                    <a class="nav-link" href="#">Analytics</a>
                </li>
                <li class="nav-item">
                    <!-- Removed margin-bottom to fit the bottom -->
                    <a class="nav-link" href="#">Settings</a>
                </li>
            </ul>
        </div>
        <div>
            @RenderBody()
        </div>

    
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>sf
   
</body>
</html>
