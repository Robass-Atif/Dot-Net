@model List<Customer>

<div class="container mt-4 mx-5">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Email</th>
                    <th>Customer Phone</th>
                    <th>Customer Address</th>
                    <th>Customer Country</th>
                    <th>Customer City</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.customer_name</td>
                        <td>@customer.customer_email</td>
                        <td>@customer.customer_phone</td>
                        <td>@customer.customer_address</td>
                        <td>@customer.customer_country</td>
                        <td>@customer.customer_city</td>
                        <td>
                            <a href="@Url.Action("EditCustomer", "Admin", new { id = customer.customer_id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("ConfirmDelete", "Admin", new { id = customer.customer_id })" class="btn btn-danger btn-sm" >Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
