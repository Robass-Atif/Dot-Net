 @model Product

 <h1 class="text-center mb-5 text-warning fw-bold">Update Product</h1>
   <form method="post" enctype="multipart/form-data" class="mx-auto p-4 shadow-lg rounded-4" style="max-width: 600px; background-color: #f8f9fa;">

       <!-- Product ID (Hidden Field) -->
       <input type="hidden" id="product_id" name="product_id" value="@Model.product_id" />

       <!-- Product Name -->
       <div class="mb-3">
           <label for="product_name" class="form-label fw-semibold text-secondary">Product Name</label>
           <input type="text" id="product_name" name="product_name" value="@Model.product_name" class="form-control shadow-sm rounded-3" placeholder="Enter Product Name" required />
       </div>

       <!-- Product Price -->
       <div class="mb-3">
           <label for="product_price" class="form-label fw-semibold text-secondary">Product Price</label>
           <input type="text" id="product_price" name="product_price" value="@Model.product_price" class="form-control shadow-sm rounded-3" placeholder="Enter Product Price" required />
       </div>

       <!-- Product Description -->
       <div class="mb-3">
           <label for="product_description" class="form-label fw-semibold text-secondary">Product Description</label>
           <input type="text" id="product_description" name="product_description" value="@Model.product_description" class="form-control shadow-sm rounded-3" placeholder="Enter Product Description" required />
       </div>

       <!-- Product Image -->
       <div class="mb-3">
           <label for="product_image" class="form-label fw-semibold text-secondary">Product Image</label>
           <img src="@("~/productImages/"+Model.product_image)" asp-append-version="true" height="80px" width="80px">
           

           <input type="file" value="@Model.product_image" name="product_image" class="form-control shadow-sm rounded-3" />
           <small class="text-muted">Current Image: @Model.product_image</small>
       </div>

       <!-- Category Dropdown -->
       <div class="mb-3">
           <label for="category" class="form-label fw-semibold text-secondary">Category</label>
           @Html.Partial("CategoryDropdown", ViewData["Categories"])
       </div>

       <!-- Submit Button -->
       <div class="text-center">
           <button type="submit" class="btn btn-warning btn-lg w-100 shadow-sm rounded-3 fw-bold" style="transition: all 0.3s ease;">
               Update Product
           </button>
       </div>
   </form> 
