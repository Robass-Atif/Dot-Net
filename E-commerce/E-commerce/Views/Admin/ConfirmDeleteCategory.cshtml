@model Category

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-danger mb-4">Confirm Delete</h1>

        <form method="post">
            <input type="hidden" name="category_id" value="@Model.category_id" />

            <div class="mb-4">
                <label for="category_name" class="form-label fw-bold text-secondary">Category Name</label>
                <input type="text" id="category_name" name="category_name"
                       value="@Model.category_name"
                       class="form-control"
                       readonly
                       style="border-radius: 5px; padding: 10px;" />
            </div>

            <div class="d-flex gap-3">
                <a href="@Url.Action("DeleteCategory","Admin", new { id = Model.category_id })"
                   class="btn btn-danger flex-fill fw-bold py-2"
                   style="border-radius: 5px;">
                    Delete Category
                </a>

                <a href="@Url.Action("fetchCategory","Admin")"
                   class="btn btn-secondary flex-fill fw-bold py-2"
                   style="border-radius: 5px;">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
