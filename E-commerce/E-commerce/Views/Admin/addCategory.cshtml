<h1 class="text-center mb-4">Add Category</h1>

<form method="post" asp-action="addCategory" style="max-width: 500px; margin: auto; background-color: #f8f9fa; padding: 20px; border-radius: 8px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);">
    <div class="form-group mb-3">
        <label for="category_name" class="form-label" style="font-weight: bold; color: #495057;">Category Name</label>
        <input id="category_name" name="category_name" placeholder="Enter Category Name" class="form-control" style="border-radius: 5px; padding: 10px;" />
    </div>
    <input type="submit" value="Add Category" class="btn btn-primary w-100" style="padding: 10px; font-weight: bold; background-color: #4a90e2; border: none; border-radius: 5px;" />
</form>
