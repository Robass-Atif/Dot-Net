@model Product

<h1 class="text-center mb-5 text-info fw-bold">Product Details</h1>
<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.product_name</h5>
            <p class="card-text"><strong>Price:</strong> @Model.product_price</p>
            <p class="card-text"><strong>Description:</strong> @Model.product_description</p>

            <div class="mb-3">
                <img src="@("~/productImages/"+Model.product_image)" asp-append-version="true" class="img-fluid" style="max-height: 200px; max-width: 200px;" />
            </div>

            <div class="mb-3">
				<label for="category" class="form-label fw-semibold text-secondary">Category</label>
                <p>@Model.Category.category_name</p> 
            <div class="d-flex justify-content-start">
                <a href="@Url.Action("fetchProducts", "Admin")" class="btn btn-warning btn-sm me-2">
                    <i class="bi bi-pencil-square"></i> back
                </a>
            </div>
        </div>
    </div>
</div>
