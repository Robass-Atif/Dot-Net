@{
    ViewData["Title"] = "Confirm Delete Cart";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
@model Cart

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Confirm Delete</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-4">Are you sure you want to delete this cart?</h5>

            <ul class="list-group mb-4">
                <li class="list-group-item"><strong>Product ID:</strong> @Model.product_id</li>
                <li class="list-group-item"><strong>Customer ID:</strong> @Model.customer_id</li>
                <li class="list-group-item"><strong>Cart Quantity:</strong> @Model.cart_quantity</li>
                <li class="list-group-item"><strong>Cart Status:</strong> @Model.cart_status</li>
            </ul>

            <div class="d-flex justify-content-end">
                <a href="@Url.Action("DeleteCart", "Admin", new { id = Model.cart_id })" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Yes, Delete
                </a>
                <a href="@Url.Action("FetchCart", "Admin")" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> No, Go Back
                </a>
            </div>
        </div>
    </div>
</div>
