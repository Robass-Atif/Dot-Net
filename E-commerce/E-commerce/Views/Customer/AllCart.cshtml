@{
    ViewData["Title"] = "All Cart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
@model List<Cart>

<div class="container mt-5">
    <h1 class="text-center mb-4">All Cart Items</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Option</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cart in Model)
            {
                <tr>
                    <td>@cart.Product.product_name</td>
                    <td>@cart.Product.product_price</td>
                    <td>
                        <a href="@Url.Action("DeleteCart", "Customer", new { id = cart.cart_id })" class="btn btn-danger">
							<i class="bi bi-trash"></i> Delete
						</a>
                        <a href="@Url.Action("CheckOut", "Customer", new { id = cart.cart_id })" class="btn btn-primary"> CheckOut</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
